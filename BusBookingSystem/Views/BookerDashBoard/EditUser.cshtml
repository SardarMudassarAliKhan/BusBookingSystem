@model CVBank.Dto.Dtos.UserDto
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_BookerLayout.cshtml";
}

<div class="card card-form">
    <div class="row no-gutters">
        <div class="col-lg-12 card-form__body card-body">
            <form asp-controller="Account" asp-action="EditUser" method="POST">
                <input type="hidden" value="@Model.UserName" />
                <div class="row">
                    <div class="col-8">
                        <div class="form-group">
                            <label for="fname">First name</label>
                            <input id="fname" style="width: 270px;" asp-for="FirstName" type="text" class="form-control" placeholder="First name">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                    </div>
                    <div class="col-8">
                        <div class="form-group">
                            <label for="lname">Last name</label>
                            <input id="lname" style="width: 270px;" asp-for="LastName" type="text" class="form-control" placeholder="Last name">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div class="col-8">
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" type="Email" style="width: 270px;" class="form-control" placeholder="someone@example.com" />

                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="col-8">
                        <div class="form-group">
                            <label>Phone</label>
                            <input asp-for="PhoneNumber" style="width: 270px;" type="text" class="form-control" placeholder="03xx-xxxxxx">
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </div>

                    <div class="col-8">
                        <div class="form-group">
                            <label>Role</label>
                            <select asp-for="RoleName" style="width: 270px;" class="form-control">
                                <option value="">Select Role</option>
                                <option value="Administrator">Administrator</option>
                                <option value="HR">HR</option>
                            </select>
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger"></span>

                    </div>
                </div>
                <div class="text-left mb-5">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts{
    <!-- Unobtrusive Validations -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

}

