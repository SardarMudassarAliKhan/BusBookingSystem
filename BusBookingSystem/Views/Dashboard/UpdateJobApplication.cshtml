@model CVBank.Dto.Dtos.JobApplicationRequestDto
@{ Layout = "~/Views/Shared/_MainLayout.cshtml"; }
<div class="card card-form">
    <div class="row no-gutters">
        <div class="col-lg-12 card-form__body card-body">
            <form asp-controller="Dashboard" asp-action="UpdateJobApplication" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label for="fname">Name</label>
                            <input asp-for="Id" type="hidden" class="form-control">
                            <input id="fname" asp-for="Name" type="text" class="form-control" placeholder="Name">
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email" value="@Model.Email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Phone</label>
                            <input asp-for="Phone" type="text" class="form-control" placeholder="Phone">
                        </div>
                        <span asp-validation-for="Phone" class="text-danger"></span>

                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            <label>Years of Experience</label>
                            <input asp-for="YearsOfExperience" type="text" class="form-control" placeholder="Years of Experience">
                        </div>
                        <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Area</label>
                            <input asp-for="Area" type="text" class="form-control" placeholder="Area">
                        </div>
                        <span asp-validation-for="Area" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Skills</label>
                            <input asp-for="Skills" type="text" class="form-control" placeholder="Skills">
                        </div>
                        <span asp-validation-for="Skills" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Current Salary</label>
                            <input asp-for="CurrentSalary" type="text" class="form-control" placeholder="Current Salary">
                        </div>
                        <span asp-validation-for="CurrentSalary" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Expected Salary</label>
                            <input asp-for="ExpectedSalary" type="text" class="form-control" placeholder="Expected Salary">
                        </div>
                        <span asp-validation-for="ExpectedSalary" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Current Organization</label>
                            <input asp-for="CurrentOrganization" type="text" class="form-control" placeholder="Current Organization">
                        </div>
                        <span asp-validation-for="CurrentOrganization" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Current Designation</label>
                            <input asp-for="CurrentDesignation" type="text" class="form-control" placeholder="Current Designation">
                        </div>
                        <span asp-validation-for="CurrentDesignation" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Last University</label>
                            <input asp-for="LastUniversity" type="text" class="form-control" placeholder="Last University">
                        </div>
                        <span asp-validation-for="LastUniversity" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Last Degree</label>
                            <input asp-for="LastDegree" type="text" class="form-control" placeholder="Last Degree">
                        </div>
                        <span asp-validation-for="LastDegree" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Location</label>
                            <input asp-for="Location" type="text" class="form-control" placeholder="Location">
                        </div>
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-left mb-5">
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts{
    <!-- Unobtrusive Validations -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}

