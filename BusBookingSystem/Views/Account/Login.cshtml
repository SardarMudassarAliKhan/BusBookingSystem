@model CVBank.Dto.Dtos.LoginRequestDto
@{ 
    Layout = "~/Views/Shared/_ScreenLayout.cshtml";
}
<div class="layout-login-centered-boxed__form" style="width:500px">
    

    <div class="card card-body" style="width:400px; height:400px; border-radius:18px">
        <div class="d-flex flex-column justify-content-center align-items-center mt-2 mb-2 navbar-light">
            <a asp-action="Index" asp-controller="Dashboard" class="navbar-brand text-center mb-2 mr-0" style="min-width: 0">
                <span>Akbar Express</span>
            </a>
        </div>

       @* <div class="alert alert-soft-success d-flex" role="alert">
            <i class="material-icons mr-3">check_circle</i>
            <div class="text-body">An email with password reset instructions has been sent to your email address, if it exists on our system.</div>
        </div>*@
        <div class="page-separator">
            <div class="page-separator__text"></div>
        </div>
        @if (TempData["ResetSuccessMessage"] != null)
        {
            <div class="alert alert-soft-success d-flex" role="alert">
                <i class="material-icons mr-3">check_circle</i>
                <div class="text-body">@TempData["ResetSuccessMessage"].ToString()</div>
            </div>
        } 
        @if (TempData["RegisterSuccessMessage"] != null)
        {
            <div class="alert alert-soft-success d-flex" role="alert">
                <i class="material-icons mr-3">check_circle</i>
                <div class="text-body">@TempData["RegisterSuccessMessage"].ToString()</div>
            </div>
        }
        @if (TempData["ForgotSuccessMessage"] != null)
        {
            <div class="alert alert-soft-success d-flex" role="alert">
                <i class="material-icons mr-3">check_circle</i>
                <div class="text-body">@TempData["ForgotSuccessMessage"].ToString()</div>
            </div>
        }
        <form asp-controller="Account" asp-action="Login" novalidate>
            <div class="form-group">
                <label class="text-label" for="email_2">Email Address:</label>
                <div class="input-group input-group-merge">
                    <input id="email_2" asp-for="Email" type="email" required="" class="form-control form-control-prepended" placeholder="john@doe.com">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <span class="far fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label class="text-label" for="password_2">Password:</label>
                <div class="input-group input-group-merge">
                    <input id="password_2" asp-for="Password" type="password" required="" class="form-control form-control-prepended" placeholder="Enter your password">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <span class="fa fa-key"></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <button style="background-color:#eeb15d" class="btn btn-block btn-primary" type="submit">Login</button>
            </div>
            <div class="form-group text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" asp-for="RememberMe" class="custom-control-input" checked="" id="remember">
                    <label class="custom-control-label" for="remember">Remember me for 30 days</label>
                </div>
            </div>
            @*<div class="form-group text-center">
                <a asp-controller="Account" asp-action="forgot-password">Forgot password?</a> <br>
                Don't have an account? <a class="text-body text-underline" asp-controller="Account" asp-action="Register">Sign up!</a>
            </div>*@
        </form>
    </div>
</div>
