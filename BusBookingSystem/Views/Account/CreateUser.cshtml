@model CVBank.Dto.Dtos.UserDto
@{ Layout = "~/Views/Shared/_MainLayout.cshtml"; }
<div class="card card-form">
    <div class="row no-gutters">
        <div class="col-lg-12 card-form__body card-body">
            <form asp-controller="Account" asp-action="CreateUser" method="POST">
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label for="fname">First name</label>
                            <input id="fname" style="width: 270px;" asp-for="FirstName" type="text" class="form-control" placeholder="First name">
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="lname">Last name</label>
                            <input id="lname" style="width: 270px;" asp-for="LastName" type="text" class="form-control" placeholder="Last name">
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" type="Email" style="width: 270px;" class="form-control" placeholder="someone@example.com" />

                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="NicNo">CNIC No</label>
                            <input id="CnicNo" style="width: 270px;" asp-for="NicNo" type="text" class="form-control" placeholder="Last name">
                        </div>
                        <span asp-validation-for="NicNo" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="Nationality">Nationality</label>
                            <input id="Nationality" style="width: 270px;" asp-for="Nationality" type="text" class="form-control" placeholder="Last name">
                        </div>
                        <span asp-validation-for="Nationality" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="Address">Address</label>
                            <input id="Address" style="width: 270px;" asp-for="Address" type="text" class="form-control" placeholder="Last name">
                        </div>
                        <span asp-validation-for="Nationality" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Phone</label>
                            <input asp-for="PhoneNumber" style="width: 270px;" type="text" class="form-control" placeholder="03xx-xxxxxx">
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="Password" style="width: 270px;" type="password" class="form-control">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input asp-for="ConfirmPassword" style="width: 270px;" placeholder="Confirm Password" type="password" class="form-control">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>

                    <div class="col-4">
                        <div class="form-group">
                            <label>Role</label>
                            <select asp-for="RoleName" style="width: 270px;" class="form-control">
                                <option value="">Select Role</option>
                                <option value="Admin">Admin</option>
                                <option value="Driver">Driver</option>
                                <option value="Operations">Operations</option>
                                <option value="Booker">Booker</option>
                                <option value="Finance">Finance</option>
                            </select>
                        </div>
                        <span asp-validation-for="RoleName" class="text-danger"></span>

                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4">

                    </div>
                    <div class="col-sm-4">

                    </div>
                    <div class="col-sm-4">
                        <div class="text-left mb-5">
                       <button style="background-color:#eeb15d;border:1px solid #eeb15d" type="submit" class="btn btn-primary">Add New User</button>
                     </div>
                    </div>
                 </div>
              </form>

        </div>
    </div>
</div>
@section Scripts{
    <!-- Unobtrusive Validations -->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}

