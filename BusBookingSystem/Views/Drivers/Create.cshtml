@model BBS.Domain.Data.Domain.Driver
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_BookerLayout.cshtml";

}
<script type="text/javascript">
    $(document).ready(function () {  
       $.ajax({  
           type: "GET",  
           url: "/Drivers/getUserName",  
           data: "{}",  
           success: function (data) {  
               var s = '<option value="-1">Please Select Driver Name</option>';  
               for (var i = 0; i < data.length; i++) {
                   console.log(data[i])
                   s += '<option value="' + data[i].id+'">' + data[i].firstName +" "+data[i].lastName+ '</option>';  
               }  
               $("#UserId").html(s);  
           }  
       });  
   });  
</script>
<h1>Create</h1>
<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                 <select class="form-control" asp-for="UserId" id="UserId" name="UserId"></select>  
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverTyoe" class="control-label"></label>
                <input asp-for="DriverTyoe" class="form-control" />
                <span asp-validation-for="DriverTyoe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

